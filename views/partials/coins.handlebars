

{{#each coins as |coin|}}
<div class="card float-child" style="width: 18rem;">
  <br>
  <div class="img-container">
  <img class="card-image" src="{{coin.img}}" alt="Avatar">
  </div>
  <div class="card-body">
  </div>
  <div class="card-body">
    <h5 class="card-title">{{coin.name}}</h5>
    <h6 class=>{{coin.ticker}}</h6>
    <p>Current Price<br>${{coin.currentPrice}}</p>
  <div class="form-group">
        <label for="coin-quantity">Quantity: </label>
        <input class="form-input" type=number step=any default="0" id="{{coin.ticker}}-quantity" />
        <div class="cost">Total Cost: </div>
      </div>
    
    
    <button type=submit id={{coin.ticker}}>Add to Wallet</button>
  </div>
</div>
{{/each}}
<script src="./js/helpers.js"></script>